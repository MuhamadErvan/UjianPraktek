<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#D600FF"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Apps"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:textColor="#FFFFFF"
            android:textSize="40dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="97dp"
        android:src="@drawable/matahari"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="21dp" />

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="606dp"
        android:layout_marginBottom="4dp"
        android:background="#E800FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:text="Today, April 03"
            android:textColor="#FFFFFF"
            android:textSize="25dp">

        </TextView>

        <TextView
            android:layout_width="124dp"
            android:layout_height="77dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:text="26"
            android:textColor="#FFFFFF"
            android:textSize="70dp" />

        <TextView
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="200dp"
            android:text="20"
            android:textColor="#FFFFFF"
            android:textSize="50dp" />

    </RelativeLayout>
    <ImageView
        android:layout_width="176dp"
        android:layout_height="171dp"
        android:src="@drawable/gg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="250dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloudy"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="170dp"/>

    <TableLayout
        android:layout_width="413dp"
        android:layout_height="308dp"
        android:background="#F600FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="405dp"></TableLayout>

    <TableRow
        android:layout_width="385dp"
        android:layout_height="75dp"
        android:layout_marginTop="315dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:src="@drawable/anjay"
            android:layout_marginRight="300dp"/>
    </TableRow>
    <TableRow
        android:layout_width="385dp"
        android:layout_height="75dp"
        android:layout_marginTop="315dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12:00"
            android:textSize="50dp"
            android:textColor="#FFFFFF"
            />
    </TableRow>

    <TableRow
        android:layout_width="385dp"
        android:layout_height="75dp"
        android:layout_marginTop="500dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:src="@drawable/anjay"
            android:layout_marginRight="300dp"/>
    </TableRow>

    <TableRow
        android:layout_width="385dp"
        android:layout_height="75dp"
        android:layout_marginTop="500dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="13:00"
            android:textSize="50dp"
            android:textColor="#FFFFFF"
            />
    </TableRow>
    <TableRow
        android:layout_width="385dp"
        android:layout_height="75dp"
        android:layout_marginTop="500dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TableRow>

    <TableRow
        android:layout_width="385dp"
        android:layout_height="75dp"
        android:layout_marginTop="500dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#FFFFFF"/>



</androidx.constraintlayout.widget.ConstraintLayout>